.row
  .small-12.small-centered.columns
    %h1.center#title POSTCOIN
  .small-8.small-centered.columns
    %p.center#subtitle Send bitcoin via email
    %hr
    .show-for-small
      .row
        .small-8.small-centered.columns
          = image_tag 'deposit.svg', style: 'height: 100%; width: 100%;'
          %p.black.center
            Deposit a small amount of bitcoin
      .row
        .small-8.small-centered.columns
          = image_tag 'email.svg', style: 'height: 100%; width: 100%;'
          %p.black.center
            Copy us by adding cc@postco.in
      .row
        .small-8.small-centered.columns
          = image_tag 'tag.svg', style: 'height: 100%; width: 100%;'
          %p.black.center
            Tag the
            = link_to 'amount', amount_page_path
            in the subject line
    .hide-for-small#section2
      .row
        .small-4.columns
          = image_tag 'deposit.svg', style: 'height: 100%; width: 100%;'
          %p.black.center
            Deposit a small amount of bitcoin
        .small-4.columns
          = image_tag 'email.svg', style: 'height: 100%; width: 100%;'
          %p.black.center
            Copy us by adding cc@postco.in
        .small-4.columns
          = image_tag 'tag.svg', style: 'height: 100%; width: 100%;'
          %p.black.center
            Tag the
            = link_to 'amount', amount_page_path
            in the subject line
    %hr
  .small-8.small-centered.columns#section3
    %h2.center Sample Email
    = image_tag 'emailscreenshot.png'
.row.footer
  .small-8.small-centered.columns
    %p.center Facebook | Twitter
